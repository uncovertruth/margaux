{
  "name": "margaux",
  "description": "著名なボルドーワインのシャトーの名称、および同シャトーの生産するワインの銘柄の名称である。「ワインの女王」と呼ばれるボルドーワインの中でも、シャトー・マルゴーはしばしば「最も女性的なワイン」とも形容される。",
  "version": "0.1.0",
  "author": "UNCOVER TRUTH Inc.",
  "bugs": {
    "url": "https://github.com/uncovertruth/margaux/pulls"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "chrome-remote-interface": "^0.23.1",
    "cluster": "^0.7.7",
    "co": "^4.6.0",
    "commander": "^2.9.0",
    "common-errors": "^1.0.2",
    "cookie-parser": "^1.4.3",
    "es6-promisify": "^5.0.0",
    "express": "^4.15.3",
    "inliner": "^1.12.2",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "moment": "^2.18.1",
    "morgan": "^1.8.2",
    "portastic": "^1.0.1",
    "raven": "^2.0.2",
    "uuid": "^3.0.1",
    "validator": "^7.0.0"
  },
  "devDependencies": {
    "@uncovertruth/eslint-config-flowtype": "^1.0.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.24.1",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.0",
    "eslint": "^3.19.0",
    "faker": "^4.1.0",
    "flow-bin": "^0.47.0",
    "flow-typed": "^2.1.2",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.0",
    "mocha": "^3.4.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.2",
    "power-assert": "^1.4.3",
    "prettier-eslint-cli": "^4.0.3",
    "remove": "^0.1.5",
    "rimraf": "^2.6.1",
    "superagent": "^3.5.2",
    "supertest": "^3.0.0"
  },
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=7.6"
  },
  "homepage": "https://github.com/uncovertruth/margaux#readme",
  "keywords": [
    "chrome",
    "snapshot"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ]
  },
  "main": "n/a",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uncovertruth/margaux.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src -d dist",
    "clean": "rimraf dist coverage",
    "codecov": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "dev": "cross-env NODE_ENV=development supervisor ./dist/bin/www.js",
    "lint": "npm-run-all -p lint:*",
    "lint:es": "eslint . --cache",
    "lint:flow": "flow",
    "postinstall": "npm run build",
    "prebuild": "npm run clean",
    "precommit": "lint-staged",
    "predev": "npm run build",
    "preserve": "npm run build",
    "prestart": "npm run build",
    "serve": "node -e \"require('./dist/lib/utils').runChromeBrowsers(require('./dist/const').REMOTE_DEBUGGING_PORTS)\"",
    "start": "node ./dist/bin/cluster.js",
    "test": "npm-run-all -p test:*",
    "test:lint": "npm run lint",
    "test:mocha": "nyc mocha -- test"
  }
}
