{
  "name": "margaux",
  "description": "著名なボルドーワインのシャトーの名称、および同シャトーの生産するワインの銘柄の名称である。「ワインの女王」と呼ばれるボルドーワインの中でも、シャトー・マルゴーはしばしば「最も女性的なワイン」とも形容される。",
  "version": "0.4.0",
  "author": "UNCOVER TRUTH Inc.",
  "bugs": {
    "url": "https://github.com/uncovertruth/margaux/pulls"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "body-parser": "^1.18.2",
    "chrome-remote-interface": "0.25.4",
    "cluster": "^0.7.7",
    "commander": "^2.12.2",
    "common-errors": "^1.0.5",
    "cross-env": "^5.1.1",
    "express": "^4.16.2",
    "inliner": "^1.13.1",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "moment": "^2.20.1",
    "morgan": "^1.9.0",
    "portastic": "^1.0.1",
    "raven": "^2.3.0",
    "rimraf": "^2.6.2",
    "uuid": "^3.1.0",
    "validator": "^9.2.0"
  },
  "devDependencies": {
    "@uncovertruth/eslint-config-flowtype": "^1.2.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.26.0",
    "codecov": "^3.0.0",
    "concurrently": "^3.5.1",
    "eslint": "^4.14.0",
    "faker": "^4.1.0",
    "flow-bin": "^0.61.0",
    "flow-typed": "^2.2.3",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mocha": "^3.5.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.3.0",
    "power-assert": "^1.4.4",
    "prettier-eslint-cli": "^4.7.0",
    "remove": "^0.1.5",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  },
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=7.6"
  },
  "homepage": "https://github.com/uncovertruth/margaux#readme",
  "keywords": [
    "chrome",
    "snapshot"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ]
  },
  "main": "n/a",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uncovertruth/margaux.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src -d dist",
    "clean": "rimraf dist coverage",
    "codecov": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "dev": "supervisor ./dist/bin/www.js",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache",
    "lint:flow": "flow",
    "postinstall": "npm run build",
    "prebuild": "npm run clean",
    "precommit": "lint-staged",
    "predev": "npm run build",
    "prestart": "npm run build",
    "start": "concurrently --kill-others 'npm run w:chrome' 'npm run w:cluster'",
    "test": "nyc mocha -- test",
    "w:chrome": "node -e \"require('./dist/lib/utils').runChromeBrowsers(require('./dist/const').REMOTE_DEBUGGING_PORTS)\"",
    "w:cluster": "node ./dist/bin/cluster.js"
  }
}
